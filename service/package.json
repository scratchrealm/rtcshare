{
  "name": "rtcshare",
  "version": "0.1.1",
  "description": "Share a directory of files using WebRTC",
  "main": "dist/index.js",
  "bin": {
    "rtcshare": "./bin/rtcshare"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts start --v --dir ./examples/example-dir1 --enable-remote-access",
    "release": "rm -rf dist && yarn build && npm publish && git tag $npm_package_version && git push --tags"
  },
  "author": "Jeremy Magland",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.10",
    "@types/simple-peer": "^9.11.5",
    "@types/ws": "^8.5.4",
    "@types/yargs": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "eslint": "^8.34.0",
    "node-pre-gyp": "^0.17.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.5",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "simple-peer": "^9.11.1",
    "wrtc": "^0.4.7",
    "ws": "^8.12.0",
    "yargs": "^17.6.2"
  }
}
